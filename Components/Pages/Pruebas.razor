@page "/prueba"
@using System.Globalization
@using Radzen.Blazor


<div class="container">
    <div class="row">
        <div class="col-sm-12 my-5">
            <RadzenCard class="w-100 mb-4">
                <RadzenCheckBox @bind-Value="@showDataLabels" Name="dataLabels"></RadzenCheckBox>
                <RadzenLabel Text="Show Data Labels" Component="dataLabels" Style="margin-left: 8px; vertical-align: middle;" />
            </RadzenCard>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <h4>Auto-size bar series</h4>
            <RadzenChart style="height:100vh;color:white;" >
                <RadzenStackedBarSeries Data="@revenue2020" CategoryProperty="Quarter" Title="MOd" ValueProperty="Revenue" StrokeWidth="16" LineType="LineType.Dashed">
                    <RadzenSeriesDataLabels Visible="@showDataLabels" />
                </RadzenStackedBarSeries>
                <RadzenStackedBarSeries Data="@revenue2019" CategoryProperty="Quarter" Title="Egreso" ValueProperty="Revenue" StrokeWidth="16">
                    <RadzenSeriesDataLabels Visible="@showDataLabels"  />
                </RadzenStackedBarSeries>
                <RadzenStackedBarSeries Data="@revenue2021" CategoryProperty="Quarter" Title="MOdificad" ValueProperty="Revenue" StrokeWidth="16">
                    <RadzenSeriesDataLabels Visible="@showDataLabels" />
                </RadzenStackedBarSeries>
               
                <RadzenBarOptions Radius="5" Margin="30" Height="40" />
                <RadzenValueAxis Formatter="@FormatAsUSD" >
                    <RadzenGridLines Visible="true" />
                    <RadzenAxisTitle Text="Revenue in USD" />
                </RadzenValueAxis>
                
            </RadzenChart>
        </div>
       
    </div>
</div>
<RadzenCard class="w-100 mb-4">
